<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:id="@+id/incoming_ride_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aventon"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/incoming_ride_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incoming_ride_request"
        android:textSize="16sp"
        android:layout_below="@id/incoming_ride_notification_title"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reject"/>
        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"/>
    </LinearLayout>
</RelativeLayout>
